FROM python:3.10-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    ffmpeg \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Copy test script
COPY test_yt_download.py /app/

# Make the script executable
RUN chmod +x /app/test_yt_download.py

# Create tmp directory
RUN mkdir -p /app/tmp

# Install yt-dlp - try the latest version
RUN pip install --no-cache-dir --upgrade yt-dlp

# Set environment variables
ENV PYTHONUNBUFFERED=1

# Set the entrypoint to the test script
ENTRYPOINT ["/app/test_yt_download.py"]

# Default command (use the default URL)
CMD [] 